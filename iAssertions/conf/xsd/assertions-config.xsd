    <xs:complexType name="assertTypeType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="name" use="optional"/>
                <xs:attribute type="xs:string" name="class" use="optional"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="assertionsType">
        <xs:sequence>
            <xs:element type="assertType" name="assert" maxOccurs="unbounded" minOccurs="0"/>
            <xs:element type="assertTypesType" name="assertTypes"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="declareNamespaceType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="name" use="optional"/>
                <xs:attribute type="xs:string" name="uri" use="optional"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
    <xs:complexType name="assertType">
        <xs:sequence>
            <xs:element type="declareNamespaceType" name="declareNamespace" maxOccurs="unbounded" minOccurs="0"/>
            <xs:element type="xs:string" name="xpath" minOccurs="0"/>
            <xs:element type="optionType" name="option" maxOccurs="unbounded" minOccurs="0"/>
            <xs:element type="xs:string" name="expectedValue" minOccurs="0"/>
            <xs:element type="xs:string" name="script" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute type="xs:string" name="type" use="optional"/>
    </xs:complexType>
    <xs:complexType name="assertTypesType">
        <xs:sequence>
            <xs:element type="assertTypeType" name="assertType" maxOccurs="unbounded" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="optionType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="name" use="optional"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>
</xs:schema>