<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="projectPath" class="java.lang.String">
        <constructor-arg value="/Users/niau/Projects/Projects/InternalNet"/>
      </bean>


    <bean id="discovery" class="net.itransformers.idiscover.v2.core.NetworkNodeDiscovererImpl">

        <property name="nodeDiscoverers">
            <map>
                <entry key="SNMP" value-ref="snmpNodeDiscoverer"/>
            </map>
        </property>
        <property name="nodeDiscoverFilter" ref="simpleNodeDiscoveryFilter"/>
        <property name="nodeDiscoveryListeners">
            <list>
                <ref bean="sampleNodeDiscoveryListener"/>
                <ref bean="rawDataFileLogDiscoveryListener"/>
                <ref bean="deviceDataFileLogDiscoveryListener"/>
                <ref bean="GraphmlFileLogDiscoveryListener"/>
                <ref bean="Neo4JGraphmlLoggerLogDiscoveryListener"/>
            </list>
        </property>
        <property name="networkDiscoveryListeners">
            <list>
                <ref bean="SnmpNetworkDiscoveryListener"/>
                <ref bean="PostNetworkDiscoveryListener"/>

            </list>
        </property>
    </bean>

    <bean id="bgpPeeringMapDiscovery" class="net.itransformers.idiscover.v2.core.bgpdiscoverer.BGPMapNetworkDiscoverer">

        <constructor-arg>
            <map>
                <entry key="fileLocation" value="iDiscover/src/test/resources/cps_rib.20140101.0113.gz"/>

            </map>
        </constructor-arg>
        <property name="networkDiscoveryListeners">
            <list>
                <!--<ref bean="rawDataFileLogDiscoveryListener"/>-->
                <ref bean="BGPGraphmlFileLogDiscoveryListener"/>

                <ref bean="Neo4JGraphmlBGPDiscoveryListener"/>
            </list>
        </property>
    </bean>

    <bean id="sdnDiscovery" class="net.itransformers.idiscover.v2.core.NetworkNodeDiscovererImpl">

        <property name="nodeDiscoverers">
            <map>
                <!--entry key="SNMP" value-ref="snmpNodeDiscoverer"/-->
                <entry key="REST" value-ref="jsonNodeDiscoverer"/>
            </map>
        </property>
        <!--<property name="nodeDiscoverFilter" ref="simpleNodeDiscoveryFilter"/>-->
        <property name="nodeDiscoveryListeners">
            <list>
                <ref bean="sampleNodeDiscoveryListener"/>
                <ref bean="rawDataFileLogDiscoveryListener"/>
                <ref bean="sdnDeviceXmlFileLogDiscoveryListener"/>
                <ref bean="sdnGraphmlFileLogDiscoveryListener"/>

            </list>
        </property>
    </bean>



    <bean id="sampleNodeDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.SampleNodeDiscoveryListener"/>
    <bean id="rawDataFileLogDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.RawDataFileLogDiscoveryListener">
        <property name="labelDirName" value="version1"/>
    </bean>

    <bean id="SnmpNetworkDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.SnmpNetworkDiscoveryListener">
        <property name="labelDirName" value="version1"/>
        <property name="graphmlDataDirName" value="undirected"/>
    </bean>

    <bean id="PostNetworkDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.PostNetworkDiscoveryListener">
        <property name="labelDirName" value="version1"/>
        <property name="postDiscoveryDataDirName" value="post-discovery"/>
        <property name="scriptPath" value="postDiscoverer/conf/groovy/"/>
        <property name="projectPath" value="/Users/niau/Projects/Projects/InternalNet"/>
        <property name="resourceManagerPath" value="/resourceManager/conf/xml/resource.xml"/>
        <property name="reportGeneratorPath" value="/postDiscoverer/conf/xml/reportGenerator.xml"/>
        <property name="tableTransfomator" value="iTopologyManager/rightClick/conf/xslt/table_creator.xslt"/>
    </bean>


    <bean id="sdnGraphmlFileLogDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.sdnGraphmlFileLogDiscoveryListener">
        <property name="graphmlDataDirName" value="network/undirected"/>
        <property name="labelDirName" value="network"/>
        <property name="floodLighGraphmlXsltTransformator" value="iDiscover/conf/xslt/floodLighGraphmlTransformator.xslt"/>
    </bean>

    <bean id="sdnDeviceXmlFileLogDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.sdnDeviceXmlFileLogDiscoveryListener">
        <property name="deviceXmlDataDirName" value="node-data"/>
        <property name="labelDirName" value="network"/>
        <property name="deviceXmlXsltTransformator" value="iDiscover/conf/xslt/floodLightDeviceXmlTransformator.xslt"/>
    </bean>

    <bean id="deviceDataFileLogDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.DeviceDataFileLogDiscoveryListener">
        <property name="labelDirName" value="version1"/>
        <property name="deviceDataDirName" value="device-data"/>
    </bean>

    <bean id="GraphmlFileLogDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.GraphmlFileLogDiscoveryListener">
        <property name="labelDirName" value="version1"/>
        <property name="graphmDirName" value="undirected"/>
        <property name="xsltFileName" value="iDiscover/conf/xslt/transformator-undirected2.xslt"/>
    </bean>
    <bean id="BGPGraphmlFileLogDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.BGPGraphmlFileLogDiscoveryListener">
        <property name="labelDirName" value="version1"/>
        <property name="graphmDirName" value="undirected"/>
    </bean>

    <bean id="Neo4JGraphmlLoggerLogDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.Neo4JGraphmlLoggerLogDiscoveryListener">
        <property name="labelDirName" value="version1"/>
        <property name="graphmDirName" value="undirected"/>
        <property name="xsltFileName" value="iDiscover/conf/xslt/transformator-undirected2.xslt"/>
        <property name="graphDbUrl" value="http://54.69.21.203:7474/db/data"/>
        <property name="dataType" value="deviceData"/>

    </bean>
    <bean id="Neo4JGraphmlBGPDiscoveryListener" class="net.itransformers.idiscover.v2.core.listeners.Neo4JGraphmlBGPDiscoveryListener">
        <property name="labelDirName" value="version1"/>
        <property name="graphmDirName" value="undirected"/>
        <property name="xsltFileName" value="../iDiscover/conf/xslt/inet-map2.xslt"/>
        <property name="graphDbUrl" value="http://54.69.21.203:7474/db/data"/>
        <property name="dataType" value="rawData"/>
        <property name="params">
            <map>
                <entry key="as-numbers" value="../../../bgpPeeringMap/conf/xml/autnums.xml"/>
            </map>
        </property>


    </bean>

    <bean id="snmpNodeDiscoverer" class="net.itransformers.idiscover.v2.core.snmpdiscoverer.SnmpNodeDiscoverer">
        <constructor-arg>
            <map>
                <entry key="mibDir" value="snmptoolkit/mibs"/>
            </map>
        </constructor-arg>
        <constructor-arg ref="discoveryHelperFactory"/>
        <constructor-arg value="PHYSICAL,NEXT_HOP,OSPF,ISIS,BGP,RIP,ADDITIONAL,IPV6"/>
        <constructor-arg ref="discoveryResourceManager"/>
    </bean>
    <bean id="bgpSnmpNodeDiscoverer" class="net.itransformers.idiscover.v2.core.snmpdiscoverer.SnmpNodeDiscoverer">
        <constructor-arg>
            <map>
                <entry key="mibDir" value="snmptoolkit/mibs"/>
            </map>
        </constructor-arg>
        <constructor-arg ref="discoveryHelperFactory"/>
        <constructor-arg value="sysName,bgpLocalAs,bgpPeerEntry,bgp4PathAttrEntry"/>
        <constructor-arg ref="discoveryResourceManager"/>
    </bean>

    <bean id="jsonNodeDiscoverer" class="net.itransformers.idiscover.v2.core.jsondiscoverer.jsonNodeDiscoverer">
        <constructor-arg>
            <map>
                <entry key="devices" value="/wm/device/"/>
                <entry key="links" value="/wm/topology/links/json"/>
                <entry key="switches" value="/wm/core/controller/switches/json"/>
                <entry key="floodlightDeviceXmlXslt" value="iDiscover/conf/xslt/floodLightDeviceXmlTransformator.xslt"/>
                <entry key="floodlightGraphmlXslt" value="iDiscover/conf/xslt/floodLighGraphmlTransformator.xslt"/>
            </map>
        </constructor-arg>

    </bean>

    <bean id="discoveryHelperFactory" class="net.itransformers.idiscover.discoveryhelpers.xml.XmlDiscoveryHelperFactory">
        <constructor-arg>
            <map>
                <entry key="fileName" value="iDiscover/conf/xml/discoveryParameters.xml"/>
                <entry key="resourceXML" value="resourceManager/conf/xml/resource.xml"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="simpleNodeDiscoveryFilter" class="net.itransformers.idiscover.v2.core.snmpdiscoverer.SimpleNodeDiscoveryFilter">
        <property name="matches">
            <list>
                <!--<value>ipAddress=.*</value>-->
                <!--<value>ipAddress=10.121</value>-->
                <!--<value>ipAddress=10.122</value>-->
            </list>
        </property>
        <property name="notMatches">
            <list>
                <!--<value>ipAddress=10\..*</value>-->
                <!--<value>ipAddress=c82\..*</value>-->
                <!--<value>ipAddress=c92\.168.*</value>-->
            </list>
        </property>
    </bean>
    <bean id="discoveryResourceManager" class="net.itransformers.idiscover.core.DiscoveryResourceManager">
        <constructor-arg ref="projectPath"/>
        <constructor-arg value="1"/>
        <constructor-arg value="resourceManager/conf/xml/resource.xml"/>
    </bean>
</beans>