<discovery-manager>
    <discovery-helper class="net.itransformers.idiscover.discoveryhelpers.xml.XmlDiscoveryHelperFactory">
        <parameters>
            <param name="fileName">iDiscover/conf/xml/discoveryParameters.xml</param>
            <param name="resourceXML">resourceManager/conf/xml/resource.xml</param>
        </parameters>
    </discovery-helper>
    <discovery-manager-listeners>
        <discovery-manager-listener class="net.itransformers.idiscover.discoverylisteners.DeviceFileLogger">
            <param name="path">network</param>
            <param name="raw-data-logging-path">raw-data</param>
            <param name="device-data-logging-path">device-hierarchical</param>

        </discovery-manager-listener>
        <discovery-manager-listener class="net.itransformers.idiscover.discoverylisteners.XmlTopologyDeviceLogger">
            <param name="xslt">iDiscover/conf/xslt/transformator-undirected2.xslt</param>
            <param name="path">network</param>
            <param name="device-centric-logging-path">graphml-undirected</param>
            <param name="network-centric-logging-path">undirected</param>
            <param name="type">undirected</param>
        </discovery-manager-listener>

        <!--<discovery-manager-listener class="net.itransformers.idiscover.discoverylisteners.XmlTopologyDeviceLogger">-->
            <!--<param name="xslt">iDiscover/conf/xslt/transformator-directed.xslt</param>-->
            <!--<param name="path">network</param>-->
            <!--<param name="type">directed</param>-->
        <!--</discovery-manager-listener>-->
        <!--snmpDiscovery-manager-listener class="com.snmpDiscovery.discoverylisteners.KMLtransformator">
            <param name="xslt">iDiscover/conf/xslt/kml_transformator.xslt</param>
            <param name="path">devices_and_models/lab/undirected</param>
        </snmpDiscovery-manager-listener-->
    </discovery-manager-listeners>
    <post-discovery-manager-listeners>
        <post-discovery-manager-listener class="net.itransformers.idiscover.discoverylisteners.PostDiscovererDeviceLogger">
            <param name="xslt">iDiscover/conf/xslt/transformator-undirected2.xslt</param>
            <param name="path">network</param>
            <param name="scriptPath">postDiscoverer/conf/groovy/</param>
            <param name="resourceManagerPath">resourceManager/conf/xml/resource.xml</param>
            <param name="reportGeneratorPath">postDiscoverer/conf/xml/reportGenerator.xml</param>
            <param name="postDiscovery-logging-path">post-discovery</param>
            <param name="tableTransformator">iTopologyManager/rightClick/conf/xslt/table_creator.xslt</param>
        </post-discovery-manager-listener>
    </post-discovery-manager-listeners>
</discovery-manager>
