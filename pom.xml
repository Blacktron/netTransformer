    <groupId>iTransformers</groupId>
    <artifactId>iTransformer</artifactId>
    <version>0.1-SNAPSHOT</version><!--Change for new version-->
    <packaging>pom</packaging>

    <!--http://mvnrepository.com/artifact/net.sf.jung-->
    <modules>
        <module>iDiscover</module>
        <module>iTopologyManager</module>
        <module>resourceManager</module>
        <module>snmp2xml</module>
        <module>utils</module>
        <module>distribution</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.3</version>
                    <configuration>
                        <descriptors>
                            <descriptor>src/main/assemble/assemble.xml</descriptor>
                        </descriptors>
                    </configuration>
                    <executions>
                        <execution>
                            <id>make-assembly</id> <!-- this is used for inheritance merges -->
                            <phase>package</phase> <!-- bind to the packaging phase -->
                            <!--<goals>-->
                                <!--<goal>single</goal>-->
                            <!--</goals>-->
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

